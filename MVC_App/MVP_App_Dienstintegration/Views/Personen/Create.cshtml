@model MVP_App_Dienstintegration.Models.PersonenViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Person hinzufügen</h1>

<h4>Bitte alle Felder ausfüllen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alter" class="control-label"></label>
                <input asp-for="Alter" class="form-control" />
                <span asp-validation-for="Alter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Geschlecht</label><br />

                <input type="radio" asp-for="Geschlecht" value="Männlich" /> Männlich<br />
                <input type="radio" asp-for="Geschlecht" value="Weiblich" /> Weiblich<br />
                <input type="radio" asp-for="Geschlecht" value="Divers" /> Divers<br />

                <span asp-validation-for="Geschlecht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wohnort" class="control-label"></label>
                <input asp-for="Wohnort" class="form-control" />
                <span asp-validation-for="Wohnort" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
