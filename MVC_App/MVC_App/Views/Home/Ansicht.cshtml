@{
    //Razor: ermöglicht die Einbettung von C# in html-Markup

    //gib der Seite einen title
    ViewData["Title"] = "Ansicht";
}

<!-- html-Code wird ausgeliefert  vs. cs-Code bleibt auf dem Server -->
<div>
    <h1>die Ansicht...</h1>
    <h2>Hallo @ViewData["Anrede"] @ViewData["Nachname"]</h2>
    @if (ViewData["Anrede"] == "Frau")
    {
        <p style="background-color:pink;">@ViewData["Vorname"]</p>
    }
    else
    {
        <p style="background-color:lightblue;">@ViewData["Vorname"]</p>
    }

    @for (int i = 0; i < 10; i++)
    {

        <p>@i</p>
    }

    <p>@DateTime.Now.ToShortDateString()</p>


</div>

@section Styles {
@*Razor-Kommentar*@
@*  <link href="/css/site.css" rel="stylesheet" /> *@
    <style>
        p {
            color: red;
        }
    </style>
}
@section Scripts {
    <script>
        console.log('hello world')
    </script>

    <script src="/js/site.js"></script>
}
